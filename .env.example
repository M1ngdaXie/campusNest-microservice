# Database Configuration
DB_ROOT_PASSWORD=your-root-password-here
DB_NAME=campusNest_users
DB_USERNAME=campusnest
DB_PASSWORD=your-secure-database-password

# JWT Configuration
# Generate a secure random string for production (at least 32 characters)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Email Configuration (Gmail)
# Get app password from: https://myaccount.google.com/apppasswords
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password-here

# Frontend URL
FRONTEND_URL=http://localhost:3000

# AWS S3 Configuration (for housing service image uploads)
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# OpenAI Configuration (for AI assistant service)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-4
AI_MAX_TOKENS=500

# Spring Profile
SPRING_PROFILES_ACTIVE=docker